{
  "description": "",
  "author": "Hamilton Ulmer",
  "manifest_version": 2,
  "name": "microfiche",
  "version": "0.0.0",
  "homepage_url": "https://github.com/hamilton/microfiche/",

  "icons": {},

  "applications": {
    "gecko": {
      "id": "microfiche@mozilla.org",
      "strict_min_version": "77.0a1"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "idle",
    "<all_urls>",
    "webNavigation",
    "webRequest"
  ],

  "browser_action": {
    "default_icon": {
      "16": "images/icon.svg",
      "32": "images/icon.svg"
    }
  },

  "options_ui": {
    "page": "public/index.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": ["dist/background.js"]
  }
}
